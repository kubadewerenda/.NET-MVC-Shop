@model ProjektZal.Models.User

<div class="login-container">
    <h2 class="login-title">Logowanie</h2>
    <form asp-action="Login" method="post" class="login-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">Hasło</label>
            <input id="password" name="password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger" style="margin-top: 10px;">@ViewBag.Error</p>
    }

    <p class="register-link">
        Nie masz konta?
        <a asp-action="Register" asp-controller="User" class="link-primary">Zarejestruj się</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
