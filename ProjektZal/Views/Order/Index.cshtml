@model IEnumerable<ProjektZal.Models.Order>

<h2>Zamówienia</h2>
<table>
    <thead>
        <tr>
            <th>Data</th>
            <th>Użytkownik</th>
            <th>Kwota</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.User.Name</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
