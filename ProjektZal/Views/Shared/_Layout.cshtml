<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.net</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjektZal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="nav-logo">Shop.net</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-left">
                                    <span class="nav-link text-dark"><strong>Cześć, </strong> @User.Identity.Name<strong>...</strong></span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Logout" asp-area="">Wyloguj</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item nav-left">
                                    <span class="nav-link text-dark"><strong>Cześć, </strong> @User.Identity.Name<strong>...</strong></span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="UserDashboard">Sklep</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Logout" asp-area="">Wyloguj</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container">
            Created by Jakub Dewerenda | Marek Brzostowicz. &copy; 2025
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
